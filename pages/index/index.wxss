/*外层容器，防止穿透点击*/
.canui-load{
	position:fixed;
	width: 100%;
	height: 100%;
	top:0;
	left:0;
	background: rgba(0, 0, 0, 0.5);
	z-index:99999;
}
/*关闭设置的阴影层，关闭底部距离，让它居中*/
.canui-load .cu-load.load-modal{
	box-shadow:inherit;
	bottom:0;
}
/*修改加载圈圈颜色*/
.canui-load .cu-load.load-modal::after{
	border-left: 6rpx solid #0081ff;
}