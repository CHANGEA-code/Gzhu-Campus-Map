.navbar__item .avatar {
  background-color: currentColor;
  border-radius: 100%;
  transform: scale(0.8);
  opacity: 0;
  transition: all 0.55s cubic-bezier(0.71, 0.03, 0.23, 0.95);
}

.navbar__item.-blue {
  color: #06b8ff;
}

.navbar__item.-orange {
  color: #f2704d;
}

.navbar__item.-navy-blue {
  color: #405fff;
}

.navbar__item.-yellow {
  color: #f8cd4b;
}

.navbar__item.-purple {
